<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.new_community_post.NewCommunityPostFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/light_purple">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/editCommunityPost_IMG_back"
            android:layout_width="@dimen/header_height"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:tint="@color/dark_purple" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/editCommunityPost_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-3dp"
            android:layout_marginEnd="@dimen/header_height"
            android:layout_toRightOf="@id/editCommunityPost_IMG_back"
            android:gravity="center"
            android:text="@string/edit_post"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/editCommunityPost_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true" />

    <ScrollView
        android:id="@+id/nsScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:hint="@string/write_post">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editCommunityPost_TXT_post"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:lines="10"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:textColor="?attr/colorControlNormal" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editCommunityPost_BTN_addTags"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/add_tags"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_tag_24"
                    app:iconTint="@color/dark_purple" />

            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/editCommunityPost_IMG_ImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/editCommunityPost_CONTAINER_imageActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editCommunityPost_BTN_selectImage"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/add_a_picture"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_camera_alt_24"
                    app:iconTint="@color/dark_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editCommunityPost_BTN_removeImage"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/remove_image"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:icon="@drawable/baseline_cancel_24"
                    app:iconTint="@color/dark_purple" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="16dp">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editCommunityPost_BTN_addLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/add_location"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_location_on_24"
                    app:iconTint="@color/dark_purple" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editCommunityPost_BTN_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/dark_purple"
                android:enabled="false"
                android:text="@string/post"
                android:textSize="@dimen/new_product_text_size" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>