<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.new_product_post.NewProductPostFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productPost_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/light_purple"
        android:gravity="center"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:text="@string/new_product" />


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:hint="@string/hint_product_name">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/productPost_TXT_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:hint="@string/hint_product_description">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/productPost_TXT_productDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:lines="6"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productPost_IMG_tags"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/baseline_tag_24"
            android:tint="@color/dark_purple" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/productPost_LBL_addTags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/productPost_IMG_tags"
            android:gravity="center_vertical"
            android:text="@string/add_tags"
            android:textSize="@dimen/new_product_text_size"
            android:textIsSelectable="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productPost_IMG_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/baseline_camera_alt_24"
            android:tint="@color/dark_purple" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/productPost_LBL_addPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/productPost_IMG_photo"
            android:gravity="center_vertical"
            android:text="@string/add_a_picture"
            android:textIsSelectable="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/productPost_IMG_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/baseline_location_on_24"
            android:tint="@color/dark_purple" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/productPost_LBL_addLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/productPost_IMG_location"
            android:gravity="center_vertical"
            android:text="@string/add_location"
            android:textIsSelectable="true"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/productPost_BTN_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:text="@string/post_in_marketplace"
        android:textSize="@dimen/new_product_text_size"
        android:backgroundTint="@color/dark_purple"/>

    <Button
        android:id="@+id/productPost_BTN_selectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:text="@string/add_a_picture"
        android:textSize="@dimen/new_product_text_size"
        android:visibility="invisible"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/productPost_IMG_ImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />


</LinearLayout>