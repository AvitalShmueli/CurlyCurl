<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.new_product_post.NewProductPostFragment">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/productPost_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/light_purple"
        android:gravity="center"
        android:text="@string/new_product"
        android:textColor="@color/dark_purple"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/nsScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:hint="@string/hint_product_name">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productPost_TXT_productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingVertical="15dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:hint="Product Type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/productPost_DD_productType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingVertical="15dp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:hint="Product Condition"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/productPost_DD_productCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:paddingVertical="15dp"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:hint="@string/hint_product_description">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productPost_TXT_productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:paddingVertical="10dp"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/control_height"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/productPost_BTN_addTags"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/add_tags"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_tag_24"
                    app:iconTint="@color/dark_purple"
                    android:fontFamily="sans-serif"/>

            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/productPost_IMG_ImageView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/control_height"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/productPost_BTN_selectImage"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/add_a_picture"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_camera_alt_24"
                    app:iconTint="@color/dark_purple" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/productPost_BTN_removeImage"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/remove_image"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_cancel_24"
                    app:iconTint="@color/dark_purple"
                    android:visibility="gone" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/control_height"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="6dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/productPost_BTN_addLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="0dp"
                    android:text="@string/add_location"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="@dimen/buttons_text_size_small"
                    android:textStyle="bold"
                    app:icon="@drawable/baseline_location_on_24"
                    app:iconTint="@color/dark_purple" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/productPost_BTN_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="30dp"
                android:background="@color/dark_purple"
                android:text="@string/post_in_marketplace"
                android:textSize="@dimen/new_product_text_size"
                android:enabled="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>